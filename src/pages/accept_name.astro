---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title='ppts'>
<h1>Quieres ser mi novia?</h1>
<ul role="list" class="link-card-grid">
    <Card
        href="/accept_ppt/"
        title="SI"
    />
    <Card
        href="/accept_name2/"
        title="NO"
    />
</ul>
</Layout>

<style>
     h1 { 
        padding-top: 20%;
        font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
     }

     .textPreposition {
        margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 50%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
        text-align: center;
        font-size: 1.5rem;
		border-radius: 8px;
     }

     .link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
     
</style>